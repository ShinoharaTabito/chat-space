.Side-bar
  .Side-bar__user-name
    .Side-bar__user-name__top-items
      .Side-bar__user-name__top-items__name
        = current_user.name
      .Side-bar__user-name__top-items__icons
        .Side-bar__user-name__top-items__icons-edit
          = link_to new_group_path do
            %i.far.fa-edit
          = link_to edit_user_path(current_user) do
            %i.fa.fa-cog
  .Side-bar__group-list
    - current_user.groups.each do |group|
      .Side-bar__group-list__name
        = group.name
      .Side-bar__group-list__message
        message no